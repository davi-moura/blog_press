<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/navbar.ejs'); %>
<div class="container">
    <hr>
    <h2>Usuarios</h2>
    <a class="btn btn-success" href="/admin/users/create">Criar novo usuario</a>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Acoes</th>
            </tr>
        </thead>
        <tbody>

            <% users.forEach(user => {%>
                <tr>
                    <th><%=user.id%></th>
                    <th><%=user.email%></th>
                    <th>
                        <a class="btn btn-warning" href="/admin/users/edit/<%=user.id%>">Editar</a>
                        <form method="post" action="/users/delete" style="display: inline;" onsubmit="confirmation(event, this)">
                            <input type="hidden" name="id" value="<%=user.id%>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
            <%})%>

        </tbody>
    </table>
</div>

<%- include('../../partials/footer.ejs'); %>
<script>
    function confirmation(event, form){
        event.preventDefault();
        var decision =  confirm("Deseja apagar este registro ?")

        if(decision){
            form.submit()
        }

    }
</script>