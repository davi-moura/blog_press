<%- include('./../../partials/header.ejs'); %>
<%- include('./../../partials/homenavbar.ejs'); %>
<div class="container">
    <hr>
    <% result.articles.rows.forEach(article => {%>
        <dv class="card">
            <div class="card-header">
                <h3><%= article.title %></h3>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
        </dv>
    <% }) %>
    
    <div class="row">
        <div class="col col-12">
            <% if(result.next) {%>
                <a href="/articles/page/<%= result.page + 1 %>" style="float: right;">Next >>></a>
            <%}%>
            <% if(result.page > 2) {%>
                <a href="/articles/page/<%= result.page - 1 %>" style="float: left;"> <<< Prev</a>
            <% } else if(result.page == 2){ %>
                <a href="/" style="float: left;"> <<< Prev</a>
            <%} %>
        </div>
        <hr>
    </div>
    <hr>

</div>
<%- include('./../../partials/footer.ejs'); %>